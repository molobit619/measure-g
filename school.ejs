                COALESCE(SUM(case when year = '2013' then ytd_actual end), 0) as g2013,
                COALESCE(SUM(case when year = '2014' then ytd_actual end), 0) as g2014



                FROM (
                SELECT g2012.site, g2012.ytd_actual, g2012.prog_desc, '2012' as year FROM 
