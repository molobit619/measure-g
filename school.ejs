        <script type="text/javascript">
            function formatSchoolAddress(street,city,state,zip) {
                return street + " " + city + ", " + state + " " + zip;
            }

            function getParameterByName(name, url) {
                if (!url) url = window.location.href;
                name = name.replace(/[\[\]]/g, "\\$&");
                var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
                    results = regex.exec(url);
                if (!results) return null;
                if (!results[2]) return '';
                return decodeURIComponent(results[2].replace(/\+/g, " "));
            }
            var schoolID = getParameterByName("schoolID");

            var sql = "SELECT ousd_site,latcod as latitude,loncod as longitude,schnam as school_name,ncessch as nces,lstree as street,lcity as city,lstate as state,lzip as zip,gslo as grade_low,gshi as grade_high,site_type FROM measure_g_schools_lat_long WHERE ousd_site =" + schoolID;

            var schoolName = "";
            // Call cartodb
            $.getJSON('https://jbaldo.cartodb.com/api/v2/sql/?q='+sql, function(data) {

                $.each(data.rows, function(key, row) {
                    schoolName = row.school_name;
                    $('#school_name').text(schoolName);
                    $('#school_address').text(formatSchoolAddress(row.street,row.city,row.state,row.zip));
                });
            });
        </script>

