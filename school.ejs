        <!-- Place your code in the script tags below -->
        <script type="text/javascript">
            google.charts.load('current', {'packages':['bar']});

            window.onload = function() {

                var map;

                function initMap(center, name) {
                    map = new google.maps.Map(document.getElementById('school_map'), {
                        center: center,
                        zoom: 15,
                        disableDefaultUI: true,
                        zoomControl: true
                    });

                    var marker = new google.maps.Marker({
                        position: center,
                        map: map,
                        title: name,
                        icon: "https://maps.google.com/mapfiles/kml/shapes/schools_maps.png"
                      });
                };

                function formatSchoolAddress(street,city,state,zip) {
                    return street + " " + city + ", " + state + " " + zip;
                }

                function getParameterByName(name, url) {
                    if (!url) url = window.location.href;
                    name = name.replace(/[\[\]]/g, "\\$&");
                    var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
                        results = regex.exec(url);
                    if (!results) return null;
                    if (!results[2]) return '';
                    return decodeURIComponent(results[2].replace(/\+/g, " "));
                }
                var schoolID = getParameterByName("schoolID");

                //Load Object Data by Program
                var dataByProgram = {};

                $.getJSON('programs.json', function(data) {

                    $.each(data, function(key, row) {

                        var program = row.program;
                        delete row.program;
                        item = [row.object, row.g2014, row.g2013, row.g2012]

                        if(dataByProgram[program]) {
                            dataByProgram[program].push(item);
                        } else {
                            dataByProgram[program] = [item];
                        }
                    });

                    //Add a header to each program data set (only happens once)
                    for(var key in dataByProgram) dataByProgram[key].unshift(['Expense Type', '2012-13', '2013-14', '2014-15']);

                });

                var sql = "SELECT ousd_site,latcod as latitude,loncod as longitude,schnam as school_name,ncessch as nces,lstree as street,lcity as city,lstate as state,lzip as zip,gslo as grade_low,gshi as grade_high,site_type FROM measure_g_schools_lat_long WHERE ousd_site =" + schoolID;

                var schoolName = "";
                // Call cartodb
                $.getJSON('https://jbaldo.cartodb.com/api/v2/sql/?q='+sql, function(data) {

                    $.each(data.rows, function(key, row) {
                        schoolName = row.school_name;
                        $('#school_name').text(schoolName);
                        $('#school_address').text(formatSchoolAddress(row.street,row.city,row.state,row.zip));
                        var center = {lat: row.latitude, lng: row.longitude};
                        initMap(center,row.school_name);
                    });
                });
                $.getJSON('per_pupil_total.json', function(data) {

                    $.each(data, function(key, row) {
                        var schoolEnrollment = row.site
                        var perPupilMeasureG = row.g2014/row._20th_enroll
                        var measuregOverTotal = row.g2014/row.budget
                        $('#school_enrollment').text("Enrollment " + schoolEnrollment);
                        $('#perPupilMeasureG').text("Per pupil Measure G " + perPupilMeasureG);
                        $('#measuregOverTotal').text("Measure G percent of total " + measuregOverTotal);
                    });
                });

                var sql2 = "SELECT  "+
                    "split_part(prog_desc, ' - ',2) as prog_desc, "+
                    "COALESCE(SUM(case when year = '2012' then ytd_actual end), 0) as g2012, "+
                    "COALESCE(SUM(case when year = '2013' then ytd_actual end), 0) as g2013, "+
                    "COALESCE(SUM(case when year = '2014' then ytd_actual end), 0) as g2014 "+

                    "FROM ( "+
                    "SELECT g2012.site, g2012.ytd_actual, g2012.prog_desc, '2012' as year FROM  "+
                    "measure_g_2012_13 g2012 "+
                        "WHERE g2012.site = "+ schoolID +

                    "UNION "+
                    "SELECT g2013.site, g2013.ytd_actual, g2013.prog_desc, '2013' as year FROM measure_g_2013_14 g2013  "+

                        "WHERE g2013.site = "+schoolID +

                    "UNION "+

                    "SELECT g2014.site, g2014.ytd_actual, g2014.prog_desc, '2014' as year FROM measure_g_2014_15_actuals g2014 "+

                    "WHERE g2014.site = "+schoolID +

                    ") u "+

                    "GROUP BY prog_desc  "+

                    "HAVING SUM(case when year = '2012' then ytd_actual end) > 10000 "+
                    "OR SUM(case when year = '2013' then ytd_actual end) > 10000 "+
                    "OR SUM(case when year = '2014' then ytd_actual end) > 10000 ";

            var programTotalsJson = [];
            var programs_chart;
            var programTotalData;

            function drawChart() {

                programTotalData = google.visualization.arrayToDataTable(programTotalsJson);

                var options = {
                chart: {
                  title: 'Spending by Program',
                  subtitle: ''
                },
                width: 530,
                height: 500
                };

                programs_chart = new google.charts.Bar(document.getElementById('chart_div'));

                programs_chart.draw(programTotalData, options);
                google.visualization.events.addListener(programs_chart, 'select', selectHandler);

                function selectHandler(e) {

                    var selection = programs_chart.getSelection();

                    if (selection.length > 0){
                        var programName = programTotalData.getFormattedValue(selection[0].row, 0);
                        var dataWithHeaders = dataByProgram[programName];
                        var data = google.visualization.arrayToDataTable(dataWithHeaders);
                        data.sort([{column: 1, desc:true}]);
                        var objectChart = new google.charts.Bar(document.getElementById('object_chart'));

                        var numBars = dataWithHeaders.length - 1;
                        var chartHeight = numBars * 70;

                        var options = {
                            chart: {
                            },
                            bars: 'horizontal', // Required for Material Bar Charts.
                            height: chartHeight,
                            width: 600,
                            axes: {
                                x: {
                                  0: { side: 'top', label: 'Amount spent'} // Top x-axis.
                                }
                              }
                        };

                        objectChart.draw(data, google.charts.Bar.convertOptions(options));
                    }

                }
            }

            $.getJSON('https://jbaldo.cartodb.com/api/v2/sql/?q='+sql2, function(data) {

                $.each(data.rows, function(key, row) {
                    item = [row.prog_desc, row.g2014, row.g2013, row.g2012]
                    programTotalsJson.push(item);
                });

                //Add a header
                programTotalsJson.unshift(['Program', '2012-13', '2013-14', '2014-15']);

            }).then(function(){
                google.charts.setOnLoadCallback(drawChart);
            });

            }
        </script>

